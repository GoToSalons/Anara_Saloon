<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MobileNumberActivity"
    android:background="@color/colorMediumGrey">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkGrey">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Enter Your Mobile Number"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/im1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/rl1"
        android:src="@mipmap/ic_launcher"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/im1"
        android:layout_centerInParent="true"
        android:text="GoToSalons"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:id="@+id/mobile_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="25dp">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/grey_mobile_number"
            android:layout_marginEnd="5dp">

            <com.hbb20.CountryCodePicker
                android:id="@+id/cpp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:ccp_showNameCode="false"
                app:ccp_showFlag="false"
                app:ccp_arrowColor="@color/colorBlack"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:ccp_contentColor="@color/colorBlack"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/grey_mobile_number"
            android:layout_toEndOf="@+id/l1"
            android:layout_marginStart="5dp">

            <EditText
                android:id="@+id/phone_number"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:paddingStart="10dp"
                android:textColor="@color/colorBlack"
                android:layout_centerInParent="true"
                android:layout_margin="3dp"
                />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap 'NEXT' to get SMS with OTP of 6 digits which you have to enter on next screen"
        android:layout_below="@+id/mobile_number_layout"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:layout_marginTop="40sp"/>

    <RelativeLayout
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_bg"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>