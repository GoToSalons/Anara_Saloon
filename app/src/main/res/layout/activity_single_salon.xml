<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SingleSalonActivity"
    android:background="@color/colorDarkGrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/im_layout"
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager_home_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="18dp"
                android:src="@drawable/back_white"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/im_layout"
            android:layout_marginTop="-30dp"
            android:background="@drawable/bg_screen_single_salon">

            <TextView
                android:id="@+id/salon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enrich Salon"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginStart="22dp"/>

            <LinearLayout
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/salon_name"
                android:layout_marginTop="8dp"
                android:layout_marginStart="22dp">

                <RatingBar
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:rating="3.5"
                    android:theme="@style/RatingBar"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/rating_text_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(25 Reviews)"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_below="@+id/rating_bar"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/im_location"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_location_on_24" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lamington Road, Mumbai Central"
                    android:textColor="@color/colorBlack"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:layout_below="@id/address_l"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/im_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_access_time_24" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 am - 4:00 pm"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/for_whom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:layout_below="@+id/address_l"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/gender" />

                <TextView
                    android:id="@+id/salon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unisex"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/colorMediumGrey"
                android:layout_margin="10dp"
                android:layout_below="@+id/time_l"/>

            <TextView
                android:id="@+id/service_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="22dp"
                android:layout_below="@id/view"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/service_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_text"
                android:scrollbars="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout
                android:id="@+id/book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_recycler"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOK NOW"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/colorMediumGrey"
                android:layout_margin="10dp"
                android:layout_below="@id/book"/>

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_marginStart="22dp"
                android:text="Contact Us"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_below="@+id/contact"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/im_contact"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_call_24" />

                <TextView
                    android:id="@+id/mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+917698310910"
                    android:textColor="@color/colorBlack"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/instagram"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/facebook"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/twitter"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>