<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkGrey">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/menu"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/im_layout"
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <ImageView
                    android:id="@+id/salon_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/main_page_image"/>

                <TextView
                    android:id="@+id/hey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey,"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:layout_marginStart="24dp"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hey"
                    android:text="Akim Kasmani"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:layout_marginStart="24dp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/im_layout"
                android:layout_marginTop="-30dp"
                android:background="@drawable/bg_main_screen">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services we provide..."
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="25dp"/>

                <RelativeLayout
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv">

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginBottom="10dp">


                        <RelativeLayout
                            android:id="@+id/hair_saloon"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@drawable/main_screen_options"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp">


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/scissors"
                                android:layout_margin="20dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="Hair \nSalon"
                                android:layout_margin="20dp"
                                android:textSize="18sp"
                                android:textColor="@color/colorBlack"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/beard_skin"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@drawable/main_screen_options"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/trimmer"
                                android:layout_margin="20dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="Beard &amp;\nSkin"
                                android:layout_margin="20dp"
                                android:textSize="18sp"
                                android:textColor="@color/colorBlack"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll1"
                        android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp">

                        <RelativeLayout
                            android:id="@+id/beauty"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@drawable/main_screen_options"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/lip_stick"
                                android:layout_margin="20dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="Beauty \nSalon"
                                android:layout_margin="20dp"
                                android:textSize="18sp"
                                android:textColor="@color/colorBlack"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/others"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@drawable/main_screen_options"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/hair_dryer"
                                android:layout_margin="20dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="Other \nServices"
                                android:layout_margin="20dp"
                                android:textSize="18sp"
                                android:textColor="@color/colorBlack"/>

                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Upcoming Bookings..."
                        android:textColor="@color/colorBlack"
                        android:textSize="22sp"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/upcoming_bookings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv3"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>